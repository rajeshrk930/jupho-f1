NEXT_PUBLIC_API_URL=https://your-backend.onrailway.app/api
NEXT_PUBLIC_RAZORPAY_KEY_ID=your-razorpay-key-id

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key

# Admin Access (optional)
# Comma-separated list of admin email addresses for frontend admin link visibility
# Must match ADMIN_EMAILS in backend .env
# Example: NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com,owner@company.com
NEXT_PUBLIC_ADMIN_EMAILS=your-admin-email@example.com

# Sentry Error Tracking & Performance Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
NEXT_PUBLIC_SENTRY_RELEASE=your-app-version
# For uploading source maps (CI/CD only)
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-sentry-org-slug
SENTRY_PROJECT=your-sentry-project-slug
